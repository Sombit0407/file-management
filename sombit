#include <stdio.h>
#include <stdlib.h>

void create_file() {
    FILE *file;
    char file_name[100];

    printf("Yo, what's the file name? ");
    scanf("%s", file_name);

    file = fopen(file_name, "w");

    if (file == NULL) {
        printf("Oops, couldn't create the file.\n");
        return;
    }

    printf("File created successfully. Cool!\n");

    fclose(file);
}

void write_file() {
    FILE *file;
    char file_name[100];
    char content[1000];

    printf("What's the file name again? ");
    scanf("%s", file_name);

    file = fopen(file_name, "a");

    if (file == NULL) {
        printf("Sorry, couldn't open the file.\n");
        return;
    }

    printf("What do you wanna write (max 1000 characters)?\n");
    scanf(" %[^\n]", content);

    fprintf(file, "%s\n", content);
    printf("Cool, content written to the file.\n");

    fclose(file);
}

void read_file() {
    FILE *file;
    char file_name[100];
    char content[1000];

    printf("What's the file name? ");
    scanf("%s", file_name);

    file = fopen(file_name, "r");

    if (file == NULL) {
        printf("Oops, couldn't open the file.\n");
        return;
    }

    printf("File content:\n");

    while (fgets(content, sizeof(content), file) != NULL) {
        printf("%s", content);
    }

    fclose(file);
}

void delete_file() {
    char file_name[100];

    printf("What's the file name? ");
    scanf("%s", file_name);

    if (remove(file_name) == 0) {
        printf("File deleted successfully. Nice!\n");
    } else {
        printf("Oops, couldn't delete the file.\n");
    }
}

